{
  "name": "xolace-app",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "clean": "git clean -xdf .next .turbo node_modules",
    "format": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,md,json}\"",
    "start": "expo start",
    "dev": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "lint": "expo lint && eslint .",
    "typecheck": "tsc --noEmit",
    "supabase": "supabase",
    "supabase:start": "supabase status || supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:status": "supabase status",
    "supabase:test": "supabase db test",
    "supabase:db:lint": "supabase db lint",
    "supabase:deploy": "supabase link --project-ref $SUPABASE_PROJECT_REF && supabase db push",
    "supabase:typegen": "pnpm run supabase:typegen:packages && pnpm run supabase:typegen:app",
    "supabase:typegen:packages": "supabase gen types typescript --local > ../../packages/supabase/src/database.types.ts",
    "supabase:typegen:app": "supabase gen types typescript --local > ./database.types.ts",
    "supabase:db:dump:local": "supabase db dump --local --data-only"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "catalog:",
    "@react-native-async-storage/async-storage": "catalog:",
    "@react-navigation/drawer": "catalog:",
    "@react-navigation/native": "catalog:",
    "@tanstack/react-query": "catalog:",
    "@xolacekit/account": "workspace:*",
    "@xolacekit/auth": "workspace:*",
    "@xolacekit/campfire": "workspace:*",
    "@xolacekit/state": "workspace:*",
    "@xolacekit/supabase": "workspace:^",
    "@xolacekit/ui": "workspace:*",
    "expo": "catalog:",
    "expo-constants": "catalog:",
    "expo-crypto": "~15.0.7",
    "expo-dev-client": "catalog:",
    "expo-font": "catalog:",
    "expo-haptics": "catalog:",
    "expo-image": "catalog:",
    "expo-linking": "catalog:",
    "expo-router": "catalog:",
    "expo-splash-screen": "catalog:",
    "expo-status-bar": "catalog:",
    "expo-system-ui": "catalog:",
    "expo-web-browser": "catalog:",
    "lucide-react-native": "catalog:",
    "metro-cache": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-native": "catalog:",
    "react-native-gesture-handler": "catalog:",
    "react-native-keyboard-controller": "catalog:",
    "react-native-mmkv": "catalog:",
    "react-native-reanimated": "catalog:",
    "react-native-safe-area-context": "catalog:",
    "react-native-screens": "catalog:",
    "react-native-svg": "catalog:",
    "react-native-ui-lib": "catalog:",
    "react-native-web": "catalog:",
    "react-native-worklets": "catalog:",
    "zustand": "catalog:"
  },
  "devDependencies": {
    "@babel/core": "catalog:",
    "@types/jest": "catalog:",
    "@types/react": "catalog:",
    "@types/react-test-renderer": "catalog:",
    "@xolacekit/eslint-config": "workspace:*",
    "@xolacekit/prettier-config": "workspace:*",
    "@xolacekit/tailwind-config": "workspace:*",
    "@xolacekit/typescript-config": "workspace:*",
    "babel-plugin-module-resolver": "catalog:",
    "eslint-config-expo": "catalog:",
    "jest": "catalog:",
    "jest-expo": "catalog:",
    "nativewind": "catalog:",
    "react-test-renderer": "catalog:",
    "supabase": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@xolacekit/prettier-config",
  "private": true
}
